<form action="/users/signin" method="post">
  <label for='password'>
  Password:
  <input type="password" name="password" required>
  </label>
  <label for='email'>
  Email:
  <input type="text" name="email" value="<%=flash[:email]%>" required>
	</label>
  <input type="submit" value="Sign in">
</form>

<a href="/users/password_recovery">Reset password</a>
